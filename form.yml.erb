---
cluster: "verde"
form:
  - tb_logdir
  - tb_extra_args
  - tb_modules
  - tb_mem
  - bc_num_hours
  - bc_email_on_started

attributes:

  tb_modules:
    label: "Additional modules (optional)"
    help: |
        <small>Space separated list of additional modules to load (eg. `parflow`)

  tb_logdir:
    label: "Tensorboard logdir"
    required: true
    help: "The directory that contains data to visualize."

  tb_extra_args:
    label: "Additional TensorBoard arguments (optional)"

  tb_mem:
    label: "Memory (GB) (optional)"
    widget: "number_field"
    help: "<small>Amount of memory to allocate</small>"

  bc_num_hours:
    label: "Runtime (in hours)"
